<pb f="1r" n="1" xml:id="pb-orig-1r-1" facs="#zone-pb-1r-1"/><lb n="1" xml:id="l-1"/>

<p xml:id="p.orig.1" n="1">Afternoon in February</p>
<space unit="lines" quantity="1"/><lb n="2" xml:id="l-2"/>

<p xml:id="p.orig.2" n="2">The day is ending</p><lb n="3" xml:id="l-3"/>

<p xml:id="p.orig.3" n="3">The night descending</p><lb n="4" xml:id="l-4"/>

<p xml:id="p.orig.4" n="4">The marsh is frozen</p><lb n="5" xml:id="l-5"/>

<p xml:id="p.orig.5" n="5">The river dead.</p>
<space unit="lines" quantity="1"/><lb n="6" xml:id="l-6"/>

<p xml:id="p.orig.6" n="6">Through clouds like ashes</p><lb n="7" xml:id="l-7"/>

<p xml:id="p.orig.7" n="7">The red sun flashes</p><lb n="8" xml:id="l-8"/>

<p xml:id="p.orig.8" n="8">On village windows</p><lb n="9" xml:id="l-9"/>

<p xml:id="p.orig.9" n="9">That glimmer red<c type="kp">.</c></p>
<space unit="lines" quantity="1"/><lb n="10" xml:id="l-10"/>

<p xml:id="p.orig.10" n="10">And through the meadows</p><lb n="11" xml:id="l-11"/>

<p xml:id="p.orig.11" n="11">Like fearful shadows</p><lb n="12" xml:id="l-12"/>

<p xml:id="p.orig.12" n="12">Slowly passes</p><lb n="13" xml:id="l-13"/>

<p xml:id="p.orig.13" n="13">a funeral train<c type="kp">.</c></p>
<space unit="lines" quantity="1"/><lb n="14" xml:id="l-14"/>
    
<p xml:id="p.orig.14" n="14"><rs type="person" ref="bio.xml#_696">Longfellow</rs><ptr target="#note-t-1"/></p>
    <space unit="lines" quantity="1"/>
    <pb f="1v" n="2" xml:id="pb-orig-1v-2" facs="#zone-pb-1v-2"/>
    <space unit="lines" quantity="1"/><lb n="15" xml:id="l-15"/>

<p xml:id="p.orig.15" n="15">Three kingsdaughters fair</p><lb n="16" xml:id="l-16"/>

<p xml:id="p.orig.16" n="16">Fly away my heart away</p><lb n="17" xml:id="l-17"/>

<p xml:id="p.orig.17" n="17">Sweet appleblossoms bloom</p><lb n="18" xml:id="l-18"/>

<p xml:id="p.orig.18" n="18">So sweet so sweet<c type="kp">.</c></p>
<space unit="lines" quantity="1"/><lb n="19" xml:id="l-19"/>

<p xml:id="p.orig.19" n="19">Ah says the eldest one</p><lb n="20" xml:id="l-20"/>

<p xml:id="p.orig.20" n="20">Fly away my heart away.</p><lb n="21" xml:id="l-21"/>

<p xml:id="p.orig.21" n="21">The days began so sweet</p><lb n="22" xml:id="l-22"/>

<p xml:id="p.orig.22" n="22">So sweet.</p>
<space unit="lines" quantity="1"/><lb n="23" xml:id="l-23"/>

<p xml:id="p.orig.23" n="23">Ah says the second one</p><lb n="24" xml:id="l-24"/>

<p xml:id="p.orig.24" n="24">Fly away my heart away</p><lb n="25" xml:id="l-25"/>

<p xml:id="p.orig.25" n="25">Far off I hear the drum</p><lb n="26" xml:id="l-26"/>

<p xml:id="p.orig.26" n="26">So sweet.</p>
<space unit="lines" quantity="1"/><lb n="27" xml:id="l-27"/>

<p xml:id="p.orig.27" n="27">Ah says the youngest one</p><lb n="28" xml:id="l-28"/>

<p xml:id="p.orig.28" n="28">Fly away my heart away</p><lb n="29" xml:id="l-29"/>

<p xml:id="p.orig.29" n="29">’t Is my true love my own</p><lb n="30" xml:id="l-30"/>

<p xml:id="p.orig.30" n="30">So sweet<c type="kp">.</c><ptr target="#note-t-2"/></p>
